<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/imageview_home_settings_settinglist_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/textview_home_setttings_settinglist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageview_home_settings_settinglist_icon"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="16dp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/imageview_home_settings_settinglist_next"
        android:layout_width="8dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_listitem_next"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textview_home_setttings_settinglist_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textColor="#999999"
        android:textSize="12sp"/>
</RelativeLayout>